<UserControl x:Class="WPF_Resume_Template.View.ResumeObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Resume_Template.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Title}"
               FontSize="{Binding TitleSize}"
               Foreground="{StaticResource AccentBrush}"
               FontWeight="Bold"
               Margin="5,20,5,5"/>
        <Border Grid.Row="1" Background="{StaticResource AccentBrush}" Margin="5,0,5,0"/>
        <ListBox ItemsSource="{Binding Items}" Grid.Row="2" Foreground="{StaticResource PrimaryTextBrush}"/>
    </Grid>
</UserControl>
